<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dev.sunny.repository.UserMapper">
    <insert id="insertOne">
        INSERT INTO m_user (user_id,
                            user_name,
                            password,
                            confirm_password,
                            date_of_birth,
                            age,
                            gender,
                            department_id,
                            role)
        VALUES (#{userId},
                #{username},
                #{password},
                #{confirmPassword},
                #{dateOfBirth},
                #{age},
                #{gender},
                #{departmentId},
                #{role})
    </insert>

    <select id="findAll" resultType="MUser">
        SELECT * FROM m_user
    </select>
</mapper>